apiVersion: v1
kind: Secret
metadata:
  name: extensions-values
  namespace: flux-system
type: Opaque
stringData:
  values.yaml: |
    os-ubuntu:
      enabled: true
    os-gardenlinux:
      enabled: true
    networking-calico:
      enabled: true
    networking-cilium:
      enabled: true
    provider-openstack:
      enabled: true
    shoot-cert-service:
      enabled: true
      values:
        certificateConfig:
          defaultIssuer:
            acme:
              email: {{ garden_control_install_acme_mail }}
              server: https://acme-v02.api.letsencrypt.org/directory
            name: garden
    shoot-dns-service:
      enabled: true
      globallyEnabled: true
    shoot-oidc-service:
      enabled: true
    shoot-flux:
      enabled: true
